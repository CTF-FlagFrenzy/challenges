name: Build and Push Docker Image

on:
  push:
    branches:
      - main

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Login to self-hosted Docker registry
        uses: docker/login-action@v2
        with:
          registry: your-registry-domain.com
          username: ${{ secrets.REGISTRY_USERNAME }}
          password: ${{ secrets.REGISTRY_PASSWORD }}

      - name: Build Docker image
        run: docker build -t your-registry-domain.com/your-image-name:latest .

      - name: Push Docker image to self-hosted registry
        run: docker push your-registry-domain.com/your-image-name:latest